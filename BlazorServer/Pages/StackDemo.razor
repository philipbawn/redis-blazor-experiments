@page "/stack-demo"

<MudContainer Class="mt-16">
    <MudText Typo="Typo.h3" Align="Align.Center" GutterBottom="true">Stack and publish demo</MudText>
    <MudText Typo="Typo.body1" Align="Align.Center">This uses LRANGE to display the entire list when a message is received on a channel.</MudText>
    <MudCard Outlined="true">
        <MudCardContent>
            <MudText Align="Align.Center">Add and remove from this redis list using these buttons.</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;"
                       @onclick="@(()=> this.AddItem())">Add an item to the stack (LPUSH)</MudButton>
            <br />
            <MudButton Variant="Variant.Filled" Color="Color.Primary" Size="Size.Large" Style="width:50%;"
                       @onclick="@(()=> StackManagement.RemoveItem())">Remove item from the stack (LPOP)</MudButton>
        </MudCardActions>
    </MudCard>
    <MudDivider />
    <MudPaper>
        @if (this.StackManagement.StackExists())
        {
            <MudList Clickable="false">
                @foreach (var item in this.StackManagement.GetStackItems())
                {
                    <MudListItem Text="@item" Icon="@Icons.Material.Filled.Https" />
                }
            </MudList>
        }
        else
        {
            <MudText>Create a stack by adding an item.</MudText>
        }
    </MudPaper>
</MudContainer>